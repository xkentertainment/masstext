
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="File Name"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="@color/button_material_dark"
        android:backgroundTint="@color/material_deep_teal_500"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:shadowRadius="1.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fileName"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Filter :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/filterSpinner"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/statusOfMessageBundle"
        android:text="Scheduled"
        android:layout_width="match_parent"
        android:background="@color/button_material_dark"
        android:backgroundTint="@color/themeColor"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_margin="7.5dp"/>
    <Button
        android:id="@+id/resendFailedBUtton"
        android:text="Resend Failed Messages"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/forceSendPendingButton"
        android:text="Force Send Pending Messages"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:shadowRadius="1.1"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/viewMessagesList"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/deleteButton"
        android:text="Delete Message Group"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:shadowRadius="1.1"
        android:layout_height="wrap_content"/>
</LinearLayout>