
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:text="Sending Messages"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:text="Preview"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="15dp"
            android:padding="25dp"
            android:text="This is the preview message. This will be what the recipients will see, when they recieve the message."
            android:id="@+id/messagePreview"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Send Message Every"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:textAlignment="center"
                android:id="@+id/messageBetweenDelay"
                android:inputType="number"
                android:text="1"
                android:layout_marginHorizontal="50dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/delayBetweenTypeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:text="SEND NOW"
            android:id="@+id/sendNowButton"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="SCHEDULE THIS MESSAGE"
            android:id="@+id/scheduleMessageButton"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/material_deep_teal_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/messageSchedulerForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:text="Delay"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/delayTimeInput"
                    android:inputType="number"
                    android:hint="69"
                    android:minWidth="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/delayTypeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:text="Repeat"
                    android:id="@+id/repeatCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:text="Time of Day"
                android:id="@+id/timeOfDayInputHeader"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
            />
            <EditText
                android:id="@+id/timeOfDayInput"
                android:hint="HH:MM:SS"
                android:inputType="time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginHorizontal="50dp"/>
            <TextView
                android:text="Date Of Month"
                android:id="@+id/dateInputHeader"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:visibility="gone"
            />
            <EditText
                android:id="@+id/dateInput"
                android:hint="19"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginHorizontal="50dp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/setScheduleButton"
                android:text="SEND ON SCHEDULE"
                android:shadowRadius="1.1"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:text="DISCARD MESSAGE"
            android:id="@+id/discardMessageButton"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>